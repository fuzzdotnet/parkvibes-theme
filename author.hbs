{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#author}}
  <header class="c-author-head">
    <div class="c-author-head__inner">
      {{#if profile_image}}
        <figure class="c-author-head__media u-align-auto">
          <img class="c-author-head__image" 
               src="{{ img_url profile_image size="profile-image-large" format="webp" }}" 
               srcset="{{ img_url profile_image size="profile-image-large" format="webp" }} 600w"
               sizes="96px"
               alt="{{ name }}" loading="lazy">
        </figure>
      {{/if}}

      <h1 class="u-font-heading">{{ name }}</h1>

      {{#if bio}}
        <p class="u-font-subHeading">{{ bio }}</p>
      {{/if}}

      <div class="c-author-head__links">
        {{#if website}}
          <a href="{{ website }}" class="u-link u-mr-100">{{t "Website"}}</a>
        {{/if}}

        {{#if twitter}}
          <a href="{{social_url type='twitter'}}" class="u-link u-mr-100">ùïè</a>
        {{/if}}

        {{#if facebook}}
          <a href="{{social_url type='facebook'}}" class="u-link u-mr-100">Facebook</a>
        {{/if}}

        {{#if linkedin}}
          <a href="{{social_url type='linkedin'}}" class="u-link u-mr-100">LinkedIn</a>
        {{/if}}
        
        {{#if bluesky}}
          <a href="{{social_url type='bluesky'}}" class="u-link u-mr-100">Bluesky</a>
        {{/if}}

        {{#if threads}}
          <a href="{{social_url type='threads'}}" class="u-link u-mr-100">Threads</a>
        {{/if}}

        {{#if mastodon}}
          <a href="{{social_url type='mastodon'}}" class="u-link u-mr-100">Mastodon</a>
        {{/if}}

        {{#if tiktok}}
          <a href="{{social_url type='tiktok'}}" class="u-link u-mr-100">TikTok</a>
        {{/if}}

        {{#if youtube}}
          <a href="{{social_url type='youtube'}}" class="u-link u-mr-100">YouTube</a>
        {{/if}}

        {{#if instagram}}
          <a href="{{social_url type='instagram'}}" class="u-link u-mr-100">Instagram</a>
        {{/if}}
        
        {{#if location}}{{ location }}{{/if}}
      </div>
    </div>
  </header>
{{/author}}

{{> components/loop }}

{{ pagination }}